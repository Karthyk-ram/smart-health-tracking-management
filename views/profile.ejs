<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Health Tracker - Profile</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Profile</h1>
            <p>Manage your account and settings.</p>
        </div>

        <div class="profile-card">
            <div class="profile-avatar">
                <div class="avatar-circle">JD</div>
                <h2><%= userProfile.name %></h2>
                <p><%= userProfile.email %></p>
            </div>

            <div class="profile-form">
                <h3>Edit Profile</h3>
                <form action="/profile" method="POST">
                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="name" value="<%= userProfile.name %>" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= userProfile.email %>" required>

                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" value="<%= userProfile.phone %>" required>

                    <label for="emergencyContact">Emergency Contact:</label>
                    <input type="tel" id="emergencyContact" name="emergencyContact" value="<%= userProfile.emergencyContact %>" required>

                    <label for="theme">Theme:</label>
                    <select id="theme" name="theme">
                        <option value="dark" <%= userProfile.theme === 'dark' ? 'selected' : '' %>>Dark</option>
                        <option value="light" <%= userProfile.theme === 'light' ? 'selected' : '' %>>Light</option>
                    </select>

                    <button type="submit" class="btn primary">Update Profile</button>
                </form>
            </div>

            <div class="profile-stats">
                <h3>Health Stats</h3>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-number"><%= healthData.length %></span>
                        <span class="stat-label">Entries</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= appointments.length %></span>
                        <span class="stat-label">Appointments</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= healthData.length > 0 ? Math.round(healthData.reduce((sum, entry) => sum + entry.steps, 0) / healthData.length) : 0 %></span>
                        <span class="stat-label">Avg Steps</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number"><%= healthData.length > 0 ? Math.round(healthData.reduce((sum, entry) => sum + entry.sleepHours, 0) / healthData.length) : 0 %>h</span>
                        <span class="stat-label">Avg Sleep</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="navbar">
        <a href="/" class="nav-item">
            <i class="fas fa-home nav-icon"></i>
            Home
        </a>
        <a href="/monitor" class="nav-item">
            <i class="fas fa-chart-line nav-icon"></i>
            Monitor
        </a>
        <a href="/appointments" class="nav-item">
            <i class="fas fa-calendar-alt nav-icon"></i>
            Appointments
        </a>
        <a href="/profile" class="nav-item active">
            <i class="fas fa-user nav-icon"></i>
            Profile
        </a>
    </nav>
</body>
</html>
