<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Health Tracker - Appointments</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Appointments</h1>
            <p>Schedule and manage your doctor appointments.</p>
        </div>

        <div class="appointment-form">
            <h2>Schedule New Appointment</h2>
            <form action="/appointments" method="POST">
                <label for="doctor">Doctor:</label>
                <input type="text" id="doctor" name="doctor" placeholder="Dr. Smith" required>

                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>

                <label for="time">Time:</label>
                <input type="time" id="time" name="time" required>

                <label for="reason">Reason:</label>
                <textarea id="reason" name="reason" placeholder="Describe your symptoms or reason for visit" required></textarea>

                <button type="submit" class="btn primary">Schedule Appointment</button>
            </form>
        </div>

        <% if (appointments.length > 0) { %>
            <div class="appointments-list">
                <h2>Your Appointments</h2>
                <% appointments.forEach(appointment => { %>
                    <div class="appointment-card">
                        <div class="appointment-header">
                            <h3><%= appointment.doctor %></h3>
                            <span class="status <%= appointment.status %>"><%= appointment.status %></span>
                        </div>
                        <div class="appointment-details">
                            <p><strong>Date:</strong> <%= appointment.date %></p>
                            <p><strong>Time:</strong> <%= appointment.time %></p>
                            <p><strong>Reason:</strong> <%= appointment.reason %></p>
                        </div>
                        <div class="appointment-actions">
                            <form action="/appointments/delete/<%= appointment.id %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn-small delete" onclick="return confirm('Are you sure you want to cancel this appointment?')">Cancel</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="placeholder">
                <h2>No Appointments Yet</h2>
                <p>Schedule your first appointment above.</p>
            </div>
        <% } %>
    </div>

    <!-- Bottom Navigation -->
    <nav class="navbar">
        <a href="/" class="nav-item">
            <i class="fas fa-home nav-icon"></i>
            Home
        </a>
        <a href="/monitor" class="nav-item">
            <i class="fas fa-chart-line nav-icon"></i>
            Monitor
        </a>
        <a href="/appointments" class="nav-item active">
            <i class="fas fa-calendar-alt nav-icon"></i>
            Appointments
        </a>
        <a href="/profile" class="nav-item">
            <i class="fas fa-user nav-icon"></i>
            Profile
        </a>
    </nav>
</body>
</html>
